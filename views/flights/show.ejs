<%- include('../partials/header') %>

        <h2>Flight Details</h2>
        <br>
        <section>
          <table>
                    <tr>Airline: <%= flight.airline %></tr><br>
                    <tr>Origin: <%= flight.airport %></tr><br>
                    <tr>Flight Number: <%= flight.flightNo %></tr><br>
                    <tr>Depart Date/Time:<br>
                      <%= flight.departs %></tr><br>
          </table>
            <br><br>
            <form action="/flights/<%= flight._id %>" method="POST">
                <label>Destination Airport:
                    <select name="airport">
                        <option value="AUS">AUS</option>
                        <option value="DFW">DFW</option>
                        <option value="LAX">LAX</option>
                        <option value="SFO">SFO</option>
                        <option value="SEA">SEA</option>
                    </select>
                </label><br><br>
                <label>Arrival Date/Time:
                    <input type="datetime-local" name="arrival">
                </label><br><br>
                <center><input type="submit" value="Update" class="btn"></center>
                <br><br>
            </form>

            <% if (flight.destinations.length) { %>
                <table>
                  <thead>
                    <tr>
                      <th>Dest.</th>
                      <th>Arrival Date/Time</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% flight.destinations.forEach((d) => { %>
                      <tr>
                        <td><%= d.airport %></td>
                        <td><%= d.arrival %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              <% } else { %>
                <h5>No Destinations Yet</h5>
              <% } %>
              
        </section>
    </body>
</html>